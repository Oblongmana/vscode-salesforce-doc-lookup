// Place your settings in this file to overwrite default and user settings.
{
    "files.exclude": {
        "out": false // set this to true to hide the "out" folder with the compiled JS files
    },
    "search.exclude": {
        "out": true // set this to false to include "out" folder in search results
    },
    // Turn off tsc task auto detection since we have the necessary tasks as npm scripts
    "typescript.tsc.autoDetect": "off",
    "cSpell.words": [
        "Farlane",
        "Quickpick",
        "Zeuli",
        "adblocker",
        "adblockers",
        "disposable",
        "subfolder",
        "url"
    ],
    "cSpell.ignoreWords": [
        "apexcode",
        "classicconsole",
        "compref",
        "doc",
        "doctypes",
        "enotfound",
        "lightningconsole",
        "nofix",
        "prefill",
        "recased",
        "sfconsole",
        "sfconsole reference disposable",
        "sforce",
        "svccons",
        "svccons doc toc url",
        "toc",
        "vsix"
    ],
    "markdown.extension.toc.omittedFromToc": {
        "CHANGELOG.md": [
            "## Table of Contents",
            "### Added",
            "### Changed",
            "### Fixed",
        ],
        "README.md": [
            "## Table of Contents",
        ],
        "NOTES.md": [
            "## Table of Contents",
        ]
    }
}