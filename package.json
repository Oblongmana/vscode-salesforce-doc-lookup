{
    "name": "vscode-salesforce-doc-lookup",
    "displayName": "Salesforce Reference",
    "description": "Lookup Salesforce Documentation quickly from VSCode",
    "publisher": "Oblongmana",
    "icon": "images/SalesforceReferenceIcon.png",
    "galleryBanner": {
        "color": "#13193E",
        "theme": "dark"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Oblongmana/vscode-salesforce-doc-lookup"
    },
    "version": "1.3.3",
    "license": "GPL-3.0-only",
    "homepage": "https://github.com/Oblongmana/vscode-salesforce-doc-lookup",
    "bugs": {
        "url": "https://github.com/Oblongmana/vscode-salesforce-doc-lookup/issues",
        "email": "oblongmana@gmail.com"
    },
    "engines": {
        "vscode": "^1.45.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "Salesforce",
        "Documentation",
        "Apex",
        "SFDX"
    ],
    "activationEvents": [
        "onCommand:vscode-salesforce-doc-lookup.salesforce-reference-apex",
        "onCommand:vscode-salesforce-doc-lookup.salesforce-reference-visualforce",
        "onCommand:vscode-salesforce-doc-lookup.salesforce-reference-lightning-console",
        "onCommand:vscode-salesforce-doc-lookup.salesforce-reference-classic-console",
        "onCommand:vscode-salesforce-doc-lookup.salesforce-reference-metadata",
        "onCommand:vscode-salesforce-doc-lookup.salesforce-reference-object-reference",
        "onCommand:vscode-salesforce-doc-lookup.salesforce-reference-rest-api",
        "onCommand:vscode-salesforce-doc-lookup.salesforce-reference-soap-api",
        "onCommand:vscode-salesforce-doc-lookup.salesforce-reference-sfdx-cli",
        "onCommand:vscode-salesforce-doc-lookup.salesforce-reference-lwc-aura-component-library",
        "onCommand:vscode-salesforce-doc-lookup.salesforce-reference-invalidate-cache",
        "onCommand:vscode-salesforce-doc-lookup.salesforce-reference-current-word-search"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "vscode-salesforce-doc-lookup.salesforce-reference-apex",
                "title": "Salesforce Reference: Apex"
            },
            {
                "command": "vscode-salesforce-doc-lookup.salesforce-reference-visualforce",
                "title": "Salesforce Reference: Visualforce"
            },
            {
                "command": "vscode-salesforce-doc-lookup.salesforce-reference-lightning-console",
                "title": "Salesforce Reference: Lightning Console"
            },
            {
                "command": "vscode-salesforce-doc-lookup.salesforce-reference-classic-console",
                "title": "Salesforce Reference: Classic Console"
            },
            {
                "command": "vscode-salesforce-doc-lookup.salesforce-reference-metadata",
                "title": "Salesforce Reference: Metadata API"
            },
            {
                "command": "vscode-salesforce-doc-lookup.salesforce-reference-object-reference",
                "title": "Salesforce Reference: Object Reference"
            },
            {
                "command": "vscode-salesforce-doc-lookup.salesforce-reference-rest-api",
                "title": "Salesforce Reference: REST API"
            },
            {
                "command": "vscode-salesforce-doc-lookup.salesforce-reference-soap-api",
                "title": "Salesforce Reference: SOAP API"
            },
            {
                "command": "vscode-salesforce-doc-lookup.salesforce-reference-sfdx-cli",
                "title": "Salesforce Reference: SFDX CLI"
            },
            {
                "command": "vscode-salesforce-doc-lookup.salesforce-reference-lwc-aura-component-library",
                "title": "Salesforce Reference: LWC and Aura Component Library (EXPERIMENTAL)"
            },
            {
                "command": "vscode-salesforce-doc-lookup.salesforce-reference-invalidate-cache",
                "title": "Salesforce Reference: Invalidate Cache"
            },
            {
                "command": "vscode-salesforce-doc-lookup.salesforce-reference-current-word-search",
                "title": "Salesforce Reference: Search for current word or selection"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Salesforce Reference Configuration",
            "properties": {
                "vscode-salesforce-doc-lookup.EXPERIMENTAL.useWebview": {
                    "type": "boolean",
                    "order": 1,
                    "default": false,
                    "markdownDescription": "EXPERIMENTAL: If set to `true`, results will be retrieved and rendered in a WebView inside VSCode."
                },
                "vscode-salesforce-doc-lookup.EXPERIMENTAL.ADVANCED.languageAndVersionPreferences.languageCode": {
                    "type": "string",
                    "order": 2,
                    "description": "ADVANCED, EXPERIMENTAL OPTION. Language code to request documentation. Please note that most non-'en-us' languages will not be available for most Salesforce release versions, and documentation retrieval will fail. If you have specific requirements, suggest using the perDocType settings. In future, the plugin may be updated to pre-check if a version is valid, and fall-back if not.",
                    "default": "en-us",
                    "enum": ["en-us", "ja-jp"],
                    "enumDescriptions": [
                        "English (United States)",
                        "Japanese"
                    ]
                },
                "vscode-salesforce-doc-lookup.EXPERIMENTAL.ADVANCED.languageAndVersionPreferences.atlasDocVersionCode": {
                    "type": "string",
                    "order": 3,
                    "description": "ADVANCED, EXPERIMENTAL OPTION (Default: Leave blank to retrieve latest). Version code to request Atlas-type documentation. Please note that some version codes will not be available for many doc types, and documentation retrieval will fail. For Atlas type docs this is generally in the format e.g. '236.0', for Aura docs this is in format e.g. '52.0'. In future, the plugin may be updated to pre-check if a version is valid, and fall-back if not.",
                    "default": ""
                },
                "vscode-salesforce-doc-lookup.EXPERIMENTAL.ADVANCED.languageAndVersionPreferences.auraDocVersionCode": {
                    "type": "string",
                    "order": 4,
                    "description": "ADVANCED, EXPERIMENTAL OPTION (Default: Leave blank to retrieve latest). Version code to request Aura-type documentation. Please note that some version codes will not be available for many doc types, and documentation retrieval will fail. For Atlas type docs this is generally in the format e.g. '236.0', for Aura docs this is in format e.g. '52.0'. In future, the plugin may be updated to pre-check if a version is valid, and fall-back if not.",
                    "default": ""
                },
                "vscode-salesforce-doc-lookup.EXPERIMENTAL.ADVANCED.languageAndVersionPreferences.perDocType": {
                        "type": "object",
                    "order": 5,
                    "propertyNames": {
                                "type": "string",
                        "title": "DocType to customise language/version code for",
                                "enum": [
                                    "APEX",
                                    "VISUALFORCE",
                                    "LIGHTNING_CONSOLE",
                                    "CLASSIC_CONSOLE",
                                    "METADATA",
                                    "OBJECT_REFERENCE",
                                    "REST_API",
                                    "SOAP_API",
                            "SFDX_CLI"
                        ],
                        "TODO": "LWC_AND_AURA_COMPONENT_LIBRARY is excluded from above, SF docs don't have configurable language/version at present 2022-07"
                            },
                    "additionalProperties": {
                        "type": "object",
                        "order": 1,
                        "title": "Language/Version Overrides for a specific DocType.",
                        "properties": {
                            "languageCode": {
                                "type": "string",
                                "order": 2,
                                "description": "ADVANCED, EXPERIMENTAL OPTION. Language code to request documentation. Please note that most non-'en-us' languages will not be available for most Salesforce release versions, and documentation retrieval will fail. In future, the plugin may be updated to pre-check if a version is valid, and fall-back if not.",
                                "default": "en-us",
                                "enum": ["en-us", "ja-jp"],
                                "enumDescriptions": [
                                    "English (United States)",
                                    "Japanese"
                                ]
                            },
                            "versionCode": {
                                "type": "string",
                                "order": 3,
                                "description": "ADVANCED, EXPERIMENTAL OPTION (Default: Leave blank to retrieve latest). Version code to request documentation. Please note that some version codes will not be available for many doc types, and documentation retrieval will fail. For Atlas type docs this is generally in the format e.g. '236.0', for Aura docs this is in format e.g. '52.0'. In future, the plugin may be updated to pre-check if a version is valid, and fall-back if not.",
                                "default": ""
                            }
                        }
                    }
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "yarn run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./",
        "pretest": "yarn run compile && yarn run lint",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.2",
        "@types/node": "^13.11.0",
        "@types/semver": "^7.3.6",
        "@types/vscode": "^1.45.0",
        "@typescript-eslint/eslint-plugin": "^2.30.0",
        "@typescript-eslint/parser": "^2.30.0",
        "eslint": "^6.8.0",
        "glob": "^7.1.6",
        "mocha": "^7.1.2",
        "typescript": "^4.2.2",
        "vscode-test": "^1.3.0"
    },
    "dependencies": {
        "cheerio": "^1.0.0-rc.10",
        "got": "^11.3.0",
        "semver": "^7.3.5",
        "tslib": "^2.3.0"
    }
}
